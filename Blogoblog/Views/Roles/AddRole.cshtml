@model Blogoblog.DAL.Models.Role

@{
    ViewData["Title"] = "Добавление роли";
}

<div class="col-md-4 offset-md-4">
    @if (Model == null)
    {
        <form class="frm" method="post" asp-controller="Roles" asp-action="AddRole">

            <div asp-validation-summary="ModelOnly"></div>

            <h3>Добавление роли</h3>
            <hr>

            <div class="form-floating" style="margin-top:10%">
                <input asp-for="Role_Name" class="form-control" id="floatingRole" placeholder="роль" required minlength="3">
                <label for="floatingRole">название</label>
            </div>
            
            <div class="form-group" style="margin-top:10%">
                <label>Описание</label>
                <textarea rows="4" style="resize: none;" asp-for="Role_Description" class="form-control" placeholder="подробное описание вызывает понимание"></textarea>
            </div>

            <div class="form-group" style="margin-top:5%">
                <button type="submit" class="btn btn-success">Добавить</button>
            </div>

            <p style="margin-top:5%"><a class="text-blue" asp-area="" asp-controller="Roles" asp-action="Index">Вернуться к списку всех ролей</a></p>
        </form>
    }
    else
    {
        @await Html.PartialAsync("_RoleAdded")
    }
</div>