                    <label class="form-check-label" style="padding-right:3%" for="flexCheckDefault">@r.Role_Name</label>
                }
            }
        </div> *@

        <div class="form-group" style="margin-top:10%">
            <label>Имя</label>
            <input asp-for="FirstName" class="form-control" required>
        </div>

        <div class="form-group" style="margin-top:5%">
            <label>Фамилия</label>
            <input asp-for="LastName" class="form-control" required>
        </div>

        <div class="form-group" style="margin-top:5%">
            <label>Пароль</label>
            <input asp-for="Password" class="form-control" placeholder="не забудьте" required>
        </div>

        <div class="form-group center" style="margin-top:10%">
            <button type="submit" class="btn btn-success">Сохранить</button>
        </div>

    </form>
</div>