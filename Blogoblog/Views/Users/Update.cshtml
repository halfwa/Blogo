@model Blogoblog.DAL.Models.User

@{
    ViewData["Title"] = "Редактирование пользователя";
}
<div class="col-md-4 offset-md-4">
    <form class="frm" method="post" asp-controller="Users" asp-action="ConfirmUpdating">

        <input type="hidden" asp-for="Id" asp-for="Email" />

        <h3>Редактирование пользователя</h3>
        <hr>

        <div class="form-group" style="margin-top:3%">
            <input type="checkbox" class="form-check-input" name="isUser" checked disabled>
            <label class="form-check-label" style="padding-right:3%" for="flexCheckDefault">Пользователь</label>

            <input type="checkbox" class="form-check-input" name="isModerator" value="false">
            <label class="form-check-label" style="padding-right:3%" for="flexCheckDefault">Модератор</label>

            <input type="checkbox" class="form-check-input" name="isAdministrator" value="false">
            <label class="form-check-label" style="padding-right:3%" for="flexCheckDefault">Администратор</label>
        </div>

