﻿@{
    ViewData["Title"] = "Пользователи";
}

<div class="col-md-12">

    <div class="center">
        <h3 class="center">Все пользователи</h3>
        @if (User.IsInRole("3"))
        {
            @* <a class="text-blue" asp-area="" asp-controller="Users" asp-action="Register">Добавить пользователя</a> *@
            <a class="btn btn-success" asp-controller="Users" asp-action="Register">Добавить пользователя</a>
        }
    </div>

    @foreach (var user in Model)
    {
        <div class="card" style="display:inline-block; margin:1%">
            <div class="card-body">
                <h5 class="card-title" style="color:darkgoldenrod">@user.FirstName @user.LastName</h5>
                <span class="badge bg-info text-dark">администратор</span>
                <p class="text-muted" style="margin-top:1%;">@user.Email</p>

                @* @if (User.Identities==user.Email) *@
                @if (User.IsInRole("3"))
                {
                    <div style="display:inline-block">
                        <button class="btn btn-primary btn-sm" onclick="window.location.href='@Url.Action("Update", "Users", new { id = user.Id })'">Редактировать</button>
                    </div>
                }
            </div>
        </div>
    }
</div>