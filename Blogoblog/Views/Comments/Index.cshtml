@{
    ViewData["Title"] = "Просмотр комментариев";
}

<div class="col-md-12">

    <div class="center">
        <h3 class="center">Все комментарии</h3>
    </div>

    @foreach (var comment in Model)
    {
        <div class="card" style="display:inline-block; margin:1%">
            <div class="card-body">
                <h6 class="card-title" style="color:blue">@comment.Content</h6>
                                
                <p class="text-muted" style="margin-top:1%">Id статьи @comment.Article_Id</p>
                
                <form method="get" asp-controller="Comments" asp-action="GetCommentById" asp-route-id="@comment.Id" style="margin-top:10px">
                    <input class="enter_submit" type="submit" value="Просмотреть" />
                </form>
            </div>
        </div>
    }
</div>
