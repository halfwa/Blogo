@* @model IEnumerable<Blogoblog.DAL.Models.Article> *@

@{
    ViewData["Title"] = "Просмотр статей";
}

<div class="col-md-12">

    <div class="center">
        <h3 class="center">Все статьи</h3>
        <a class="btn btn-success" asp-controller="Articles" asp-action="AddArticle">Добавить статью</a>
    </div>

    @foreach (var article in Model)
    {
        <div class="card" style="display:inline-block; margin:1%">
            <div class="card-body">
                <h5 class="card-title" style="color:darkgoldenrod">@article.Title</h5>

                <div style="margin-top:3%">
                    @if (article.Tags.Count != 0)
                    {
                        @foreach (var tag in article.Tags)
                        {
                            <span class="badge bg-info text-dark">@tag.Content</span>
                        }
                    }
                </div>

                <div style="margin-top:10%">
                    <div style="display:inline-block">
                        <button class="btn btn-primary btn-sm" onclick="window.location.href='@Url.Action("GetArticleById", "Articles", new { id = article.Id })'">Просмотреть</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>