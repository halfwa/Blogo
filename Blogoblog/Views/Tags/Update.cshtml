@model Blogoblog.DAL.Models.Tag
@{
    ViewData["Title"] = "Изменение тега";
}
<div class="col-md-4 offset-md-4">
    <form class="frm" method="post" asp-controller="Tags" asp-action="ConfirmUpdating">

        <input type="hidden" asp-for="Id" />

        <h3>Редактирование тега</h3>
        <hr>

        <div class="form-floating" style="margin-top:10%">
            <input asp-for="Content" class="form-control" id="floatingTag" required minlength="3">
            <label for="floatingTag">название</label>
        </div>

        <div class="form-group" style="margin-top:5%">
            <button type="submit" class="btn btn-success">Сохранить</button>
        </div>

        <p style="margin-top:5%"><a class="text-blue" asp-area="" asp-controller="Tags" asp-action="Index">Перейти к списку всех тегов</a></p>

    </form>
</div>